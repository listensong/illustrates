<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zms.song.illustrates.widget.WidgetActivity">

    <TextView
        android:id="@+id/toast_text_view"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorAccent"/>

    <zms.song.illustrates.widget.EditText.LimitEditText
        android:id="@+id/limit_edit_text"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:maxLength="15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toast_text_view"/>

</android.support.constraint.ConstraintLayout>
